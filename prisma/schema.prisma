generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id             String          @id @default(cuid())
  name           String
  email          String          @unique
  passwordHash   String
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  tasks          Task[]
  preferences    UserPreference?

  @@map("users")
}

model Task {
  id              String      @id @default(cuid())
  title           String
  description     String?
  category        Category    @default(PERSONAL)
  status          TaskStatus  @default(ACTIVE)
  aiGuidance      String?
  targetDate      DateTime?
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  userId          String
  user            User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  subtasks        Subtask[]

  @@index([userId])
  @@index([category])
  @@index([status])
  @@map("tasks")
}

model Subtask {
  id                String    @id @default(cuid())
  title             String
  description       String?
  estimatedMinutes  Int?
  completed         Boolean   @default(false)
  completedAt       DateTime?
  orderIndex        Int       @default(0)
  taskId            String
  task              Task      @relation(fields: [taskId], references: [id], onDelete: Cascade)

  @@index([taskId])
  @@map("subtasks")
}

model UserPreference {
  id                  String   @id @default(cuid())
  userId              String   @unique
  user                User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  tonePreference      Tone     @default(SUPPORTIVE)
  reminderFrequency   String   @default("moderate")
  workloadLevel       String   @default("balanced")
  showEncouragement   Boolean  @default(true)
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  @@map("user_preferences")
}

enum Category {
  ACADEMIC
  CAREER
  PERSONAL
}

enum TaskStatus {
  ACTIVE
  PAUSED
  COMPLETED
}

enum Tone {
  SUPPORTIVE
  STRUCTURED
  CASUAL
}
